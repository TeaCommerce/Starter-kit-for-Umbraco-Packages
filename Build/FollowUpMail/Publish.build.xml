<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="JavaScriptMinify">

  <!-- IMPORTS -->
  <PropertyGroup>
    <MSBuildCommunityTasksPath>$(MSBuildProjectDirectory)\..\Tools\MSBuild community tasks</MSBuildCommunityTasksPath>
  </PropertyGroup>
  
  <Import Project="$(MSBuildCommunityTasksPath)\MSBuild.Community.Tasks.targets" />
  
  <!-- PROPERTIES -->
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
	<BuildDir>..\FollowUpMail</BuildDir>
	<WebDir>..\..\Source\FollowUpMail</WebDir>
	<PublishDir>Publish</PublishDir>
  </PropertyGroup>
  
  <!-- COMPILE -->
  <Target Name="Compile">
    <ItemGroup>
      <ProjectsToBuild Include="$(BuildProjectDir)\*proj" />
    </ItemGroup>
    <MSBuild Targets="Rebuild" Projects="@(ProjectsToBuild)" Properties="Configuration=$(Configuration);" />
  </Target>
  
  <!-- CLEAN -->
  <Target Name="Clean" DependsOnTargets="Compile">
    <ItemGroup>
      <FilesToRemove Include="$(PublishDir)\**\*.*" />
	  <DirectoriesToRemove Include="$(PublishDir)\bin;$(PublishDir)\Scripts;$(PublishDir)\Views;$(PublishDir)\Media" />
    </ItemGroup>
    <RemoveDir Directories="@(DirectoriesToRemove)" />
	<Delete Files="@(FilesToRemove)" />
  </Target>
  
  <Target Name="CopyFiles" DependsOnTargets="Clean">
    <ItemGroup>
	  <ConfigFile Include="$(WebDir)\Config\FollowUpMail.config" />
	  <MailingController Include="$(WebDir)\Controllers\AutomatedMaillingController.cs" />
	  <EventHandler Include="$(WebDir)\EventHandlers\FollowUpMailHandler.cs" />
	  <Settings Include="$(WebDir)\Models\Settings\FollowUpMailConfig.cs" />
	  <ReaderService Include="$(WebDir)\Services\ConfigReaderService.cs" />
	  <MailingService Include="$(WebDir)\Services\AutomatedMaillingService.cs" />
	  <MailingRepository Include="$(WebDir)\Repositories\AutomatedMaillingRepository.cs" />
	  <Package Include="$(BuildDir)\package.xml" />
    </ItemGroup>
	
	<Copy SourceFiles="@(ConfigFile)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(MailingController)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(EventHandler)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(Settings)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(ReaderService)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(MailingService)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(MailingRepository)" DestinationFolder="$(PublishDir)" />
	<Copy SourceFiles="@(Package)" DestinationFolder="$(PublishDir)" />	
  </Target>
  
  <Target Name="JavaScriptMinify" DependsOnTargets="CopyFiles">
  </Target>
  
</Project>